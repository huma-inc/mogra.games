/**
 * @file
 * Styles for Mogra's breadcrumbs.
 */
#block-mogra-breadcrumbs .content {
  margin-top: 0;
}
.breadcrumb {
  color: #ffc107;
  font-weight: bold;
  text-shadow:
    black 2px 0px,  black -2px 0px,
    black 0px -2px, black 0px 2px,
    black 2px 2px , black -2px 2px,
    black 2px -2px, black -2px -2px,
    black 1px 2px,  black -1px 2px,
    black 1px -2px, black -1px -2px,
    black 2px 1px,  black -2px 1px,
    black 2px -1px, black -2px -1px,
    black 4px 2px,  black 0px 2px,
    black 2px 0px, black 2px 4px,
    black 4px 4px , black 0px 4px,
    black 4px 0px, black 0px 0px,
    black 3px 4px,  black 1px 4px,
    black 3px 0px, black 1px 0px,
    black 4px 3px,  black 0px 3px,
    black 4px 1px, black 0px 1px;
  font-size: 0.929em;
  padding-bottom: 10px;
  & li::before {
    color: #FFF;
  }
  & a {
    color: #FFF;
    &:hover {
      color: #ff0;
      border-bottom: none;
    }
  }
}
.region-breadcrumb {
  padding: 0 10px;
}
.path-frontpage .region-breadcrumb {
  display: none;
}

@media all and (min-width: 560px) {
  .breadcrumb {
    padding-bottom: 15px;
  }
  .region-breadcrumb {
    padding: 0 20px;
  }
}


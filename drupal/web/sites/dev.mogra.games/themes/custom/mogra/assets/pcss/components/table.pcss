/**
 * @file
 * Styles for Mogra's tables.
 */

table {
  width: 100%;
  margin: 10px 0;
  border-spacing: 0;
  border: 0;
  border-collapse: collapse;
  font-family: "Lucida Grande", "Lucida Sans Unicode", Verdana, sans-serif;
  font-size: 0.857em;
}
table table {
  font-size: 1em;
}
tr {
  padding: 0.1em 0.6em;
  border-bottom: 1px solid #ccc;
  background: #efefef;
  background: #FFF;
}
thead > tr {
  border-bottom: 1px solid #000;
}
tr.odd {
  background: #e4e4e4;
  background: rgba(0, 0, 0, 0.105);
}
table tr th {
  border-bottom-style: none;
  background: #eee9dd;
  text-align: center;
}
table tr th,
table tr th a,
table tr th a:hover,
table tr th a:focus {
  color: #362717;
  font-weight: bold;
}
table tbody tr th {
  vertical-align: top;
}
tr td,
tr th {
  padding: 5px 7px;
  text-align: left; /* LTR */
  border: 1px solid #d9d0bf;
  line-height: 1.5;
}
.tabledrag-handle:hover,
.tabledrag-handle {
  border: none;
}
[dir="rtl"] tr td,
[dir="rtl"] tr th {
  text-align: right;
}

/**
 * Responsive tables.
 */
@media screen and (max-width: 37.5em) { /* 600px */
  th.priority-low,
  td.priority-low,
  th.priority-medium,
  td.priority-medium {
    display: none;
  }
}

@media screen and (max-width: 60em) { /* 920px */
  th.priority-low,
  td.priority-low {
    display: none;
  }
}

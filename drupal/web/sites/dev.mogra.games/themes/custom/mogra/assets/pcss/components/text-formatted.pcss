/**
 * @file
 *
 * Visual styles for Mogra's text-formatted component.
 */

.text-formatted ul,
.text-formatted ol {
  margin: 1em 0;
  padding: 0 0 0.25em 15px; /* LTR */
}
[dir="rtl"] .text-formatted ul,
[dir="rtl"] .text-formatted ol {
  padding: 0 15px 0.25em 0;
}

.body_paragraphs ul,
.body_paragraphs ol,
.toc-list {
  line-height: 1.334;
  list-style-type: none;
  margin: 20px 0;
  padding: 0 0 0 2em;
  & li {
    &::before {
      float: left;
      line-height: 1.334;
      margin: 0 .5em 0 -2em;
      width: 1.5em;
      text-align: right;
    }
    & + li {
      margin-top: 5px;
    }
  }
  & ul, & ol {
    margin: 5px 0 0 0;
  }
}

.body_paragraphs ul {
  & > li::before {
    content: "\e900";
  }
  & ul > li::before {
    content: "\e901";
  }
}

.body_paragraphs ol,
.toc-list {
  counter-reset: item;
  & > li::before {
    color: #181818;
    counter-increment: item;
    content: '.'counters(item, ".");
    direction: rtl;
    font-family: "M PLUS 1p", sans-serif;
    font-style: oblique;
    white-space: nowrap;
  }
}

ul.notes,
ol.notes {
  font-size: .8em;
  line-height: 1.25;
  margin-top: 10px;
  margin-bottom: 10px;
  padding-left: 1.5em;
  & > li::before {
    color: inherit;
    content: "â€»";
    line-height: 1.25;
    margin: 0 .25em 0 -1.5em;
    width: 1.25em;
  }
  & li + li {
    margin-top: 5px;
  }
}
ol.notes {
  & > li::before {
    content: '.'counter(item);
    font-family: inherit;
    font-style: normal;
  }
}

.list-summary {
  position: relative;
  margin: 35px auto 2em;
  & .list-summary__title {
    color: #125ea1;
    font-family: "M PLUS 1p", sans-serif;
    font-size: 1.334em;
    text-shadow: 2px 2px #fffbf0;
    display: flex;
    width: 100%;

    position: absolute;
    top: -15px;
    &::before,
    &::after {
      border-top: solid 5px #429ff0;
      content: "";
      display: block;
      height: 20px;
      margin-top: 15px;
    }
    &::before {
      border-top-left-radius: 20px;
      border-left: solid 5px #429ff0;
      width: 20px;
      margin-right: 7px;
    }
    &::after {
      flex: 1;
      border-top-right-radius: 20px;
      border-right: solid 5px #429ff0;
      margin-left: 7px;
    }
  }
  & ul,
  & ol {
    border: solid 5px #429ff0;
    border-top: none;
    border-radius: 20px;
    color: #2e426b;
    font-family: "M PLUS 1p", sans-serif;
    line-height: 1.334;
    margin: 0;
    padding: 20px 1em 1em 35px;
    position: inherit;
    z-index: 1;
    & li::before {
      width: 25px;
      margin: 0 0 0 -30px;
    }
  }
  & ul li::before {
    color: #ffbb33;
    content: "\E902";
  }
  & ol li::before {
    content: '.'counter(item);
  }
  &::before {
    background: #eff1f5;
    border-radius: 15px;
    content: "";
    position: absolute;
    top: 7px; right: 7px; bottom: 7px; left: 7px;
    z-index: 0;
  }

  &.list-summary--check {
    & .list-summary__title {
      color: #d50b77;
      &::before,
      &::after {
        border-color: #f24aba;
      }
    }
    & ul,
    & ol {
      color: #59263b;
      border-color: #f24aba;
    }
    &::before {
      background: #fff0f4;
    }
  }
}

@media all and (min-width: 560px) and (max-width: 850px), all and (min-width: 1100px) {
  .list-summary {
    margin: 50px auto 3em;
    max-width: 600px;
    & .list-summary__title {
      font-size: 1.8em;
      top: -20px;
      &::before,
      &::after {
        height: 30px;
        margin-top: 20px;
      }
      &::before {
        border-top-left-radius: 30px;
        width: 35px;
        margin-right: 10px;
      }
      &::after {
        border-top-right-radius: 30px;
        margin-left: 10px;
      }
    }
    & ul,
    & ol {
      border-radius: 30px;
      font-size: 1.334em;
      line-height: 1.25;
      padding: 25px 1em 1em 45px;
      & li {
        & + li {
          margin-top: 10px;
        }
        &::before {
          line-height: 1.25;
        }
      }
    }
    &::before {
      border-radius: 25px;
      top: 7px; right: 7px; bottom: 7px; left: 7px;
    }
  }
}
